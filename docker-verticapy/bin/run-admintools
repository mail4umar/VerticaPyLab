#!/bin/bash

function menu {
  echo
  echo "Admintools Main Menu"
  echo
  echo "  1) admintools"
  echo "  2) quit"
  echo
} 

echo "Admintools Main Menu"
echo ""
PS3="Select an option: "

select opt in admintools quit; do

  case $opt in
    admintools)
      echo "Connecting to the Vertica server..."
      admintools
      menu
      ;;
    quit)
      echo "This session has been closed and cannot be used anymore"
      echo "If you want to use admintools, open a new Admintools window"
      echo "The terminal will close in 5 secs"
      sleep 5
      break
      ;;
    *) 
      echo "Invalid option $REPLY"
      echo "The terminal will close in 5 secs"
      sleep 5
      exit 1
      ;;
  esac
done 

exit
